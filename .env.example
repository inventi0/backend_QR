# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string for async operations
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE=postgresql+asyncpg://admin:admin@db:5432/app

# Database credentials (используются в docker-compose)
LOGIN_DB=admin
PASSWORD_DB=admin
DB_NAME=app

# ============================================
# Authentication & Security
# ============================================
# JWT секретный ключ (минимум 32 символа)
# Генерация: python -c "import secrets; print(secrets.token_urlsafe(32))"
private_key=your-secret-jwt-key-at-least-32-chars-long-CHANGE-IN-PRODUCTION

# Session secret для Starlette Admin (можно использовать тот же генератор)
SESSION_SECRET=your-session-secret-key-CHANGE-IN-PRODUCTION

# Администратор (создаётся автоматически при первом запуске)
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE-IN-PRODUCTION

# ============================================
# S3 Storage (Selectel Cloud Storage)
# ============================================
S3_ACCESS_KEY=your-access-key-here
S3_SECRET_KEY=your-secret-key-here
S3_ENDPOINT_URL=https://s3.ru-7.storage.selcloud.ru
S3_BUCKET_NAME=your-bucket-name

# Публичный URL для доступа к файлам (CDN или прямой S3)
# Пример: https://your-bucket.s3.ru-7.storage.selcloud.ru
S3_PUBLIC_BASE=https://your-bucket.s3.ru-7.storage.selcloud.ru

# ============================================
# Application URLs
# ============================================
# URL фронтенда (для генерации ссылок в QR-кодах)
# Development: http://localhost:5173
# Production: https://yourapp.com или http://your-server-ip
PUBLIC_FRONTEND_BASE_URL=http://localhost:5173

# URL API (опционально, если фронт и бэк на разных доменах)
# Development: http://localhost:8000
# Production: https://api.yourapp.com или http://your-server-ip:80
PUBLIC_API_BASE_URL=http://localhost:8000

# ============================================
# Debug Mode
# ============================================
# Включает детальные ошибки и SQL логирование
# В production ОБЯЗАТЕЛЬНО установить в false
DEBUG=false

# ============================================
# Product Seeding (опционально)
# ============================================
# При старте приложения автоматически создастся тестовый продукт
SEED_PRODUCT_TYPE=Футболка
SEED_PRODUCT_SIZE=M
SEED_PRODUCT_COLOR=Белый
SEED_PRODUCT_DESC=Базовая белая футболка размера M
SEED_PRODUCT_PRICE=1000

# Опционально: загрузить изображение из локального файла
# SEED_PRODUCT_IMG_PATH=/absolute/path/to/image.png

# Опционально: использовать готовый URL изображения
# SEED_PRODUCT_IMG_URL=https://example.com/image.png
